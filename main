import java.util.ArrayList;
import java.util.Iterator;

enum OrderStatus {
    PENDING,
    PAID,
    SHIPPED,
    CANCELLED
}

abstract class Order {
    private int orderId;
    private double amount;
    private OrderStatus status;

    public Order(int orderId, double amount) {
        this.orderId = orderId;
        setAmount(amount);
        this.status = OrderStatus.PENDING;
    }

    public abstract void processOrder();

    public String getOrderSummary() {
        return "Order ID: " + orderId +
               ", Amount: " + amount +
               ", Status: " + status;
    }

    public int getOrderId() { return orderId; }
    public double getAmount() { return amount; }
    public OrderStatus getStatus() { return status; }

    public void setAmount(double amount) {
        if (amount >= 0) {
            this.amount = amount;
        }
    }

    protected void setStatus(OrderStatus status) {
        this.status = status;
    }
}

interface Payable {
    void pay();
}

class OnlineOrder extends Order implements Payable {
    public OnlineOrder(int orderId, double amount) {
        super(orderId, amount);
    }

    @Override
    public void processOrder() {
        if (getAmount() > 0) {
            System.out.println("Processing online order with ID: " + getOrderId());
            setStatus(OrderStatus.PENDING);
        } else {
            System.out.println("Order ID " + getOrderId() + " has invalid amount.");
            setStatus(OrderStatus.CANCELLED);
        }
    }

    @Override
    public void pay() {
        if (getStatus() == OrderStatus.PENDING) {
            System.out.println("Payment received for Order ID: " + getOrderId());
            setStatus(OrderStatus.PAID);
        } else {
            System.out.println("Order ID " + getOrderId() + " cannot be paid. Current status: " + getStatus());
        }
    }

    public void shipOrder() {
        if (getStatus() == OrderStatus.PAID) {
            System.out.println("Order ID " + getOrderId() + " has been shipped.");
            setStatus(OrderStatus.SHIPPED);
        } else {
            System.out.println("Order ID " + getOrderId() + " cannot be shipped. Current status: " + getStatus());
        }
    }

    public void cancelOrder() {
        if (getStatus() == OrderStatus.PENDING || getStatus() == OrderStatus.PAID) {
            System.out.println("Order ID " + getOrderId() + " has been cancelled.");
            setStatus(OrderStatus.CANCELLED);
        } else {
            System.out.println("Order ID " + getOrderId() + " cannot be cancelled. Current status: " + getStatus());
        }
    }
}

public class OrderApp {
    public static void main(String[] args) {
        ArrayList<Order> orders = new ArrayList<>();

        OnlineOrder order1 = new OnlineOrder(101, 250.0);
        OnlineOrder order2 = new OnlineOrder(102, 500.0);
        OnlineOrder order3 = new OnlineOrder(103, 150.0);

        orders.add(order1);
        orders.add(order2);
        orders.add(order3);

        order1.processOrder();
        order1.pay();
        order1.shipOrder();

        order2.processOrder();
        order2.pay();

        order3.processOrder();
        order3.pay();
        order3.cancelOrder();

        Iterator<Order> iterator = orders.iterator();
        while (iterator.hasNext()) {
            Order order = iterator.next();
            System.out.println(order.getOrderSummary());
            if (order.getStatus() == OrderStatus.CANCELLED) {
                System.out.println("Removing cancelled order: " + order.getOrderId());
                iterator.remove();
            }
        }

        System.out.println("\nRemaining Orders:");
        for (Order order : orders) {
            System.out.println(order.getOrderSummary());
        }
    }
}
